@model dynamic

    @{
        ViewBag.Title = "Reset Password";
        Layout = "~/Views/Shared/_Layout2.cshtml";
    }

    <link rel="stylesheet" href="~/Content/css/formsStyle.css" />
    <div id="account-overlay">
        <div id="container">
            <section class="form-section">
                <div class="row attuh-from">


                    <div class="col-md-12 col-sm-12 col-xs-12 no-padding authentication_from" id="customer_password_reset_form">
                        <div class="col-md-8 col-sm-8 col-xs-12 auth_form_body">
                            <div class="col-md-12 col-sm-12 col-xs-12 slice mobile_form_changer">
                                <div class="col-md-12 col-sm-12 col-xs-12 change_form">
                                    <span style="color: #606060">Are you vendor?</span>
                                    <button class="btn btn-sm business_signin_btn" onclick="open_vendor_signin_form();" style="height: 40px;">Business Log In</button>
                                </div>
                            </div>
                            <form id="reset_user_password_from" method="post" action='https://www.shadibox.com/home/reset_user_password'>
                                <input type="hidden" name="token" id="token" value="">
                                <div class="form-left-part-portion">
                                    <div class="col-md-12 col-sm-12 col-xs-12 slice">
                                        <h3 class="text-center"><span style="font-size: 15px; text-transform: uppercase;">Customer Reset Password</span></h3><br> <br>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12 "> <h4 id="reset-password-message"></h4></div>
                                    <div class="col-md-12 col-sm-12 col-xs-12 slice">
                                        <input autocomplete="off" autocomplete="off" type="password" class="form-control required" value="" id="NewPassword" name="NewPassword" placeholder="Type your new password *">
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12 slice">
                                        <input autocomplete="off" autocomplete="off" type="password" class="form-control required" value="" id="NewPasswordConfirm" name="NewPasswordConfirm" placeholder="Confirm new password *">
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12 slice">
                                        <button type="submit" name="reset_user_password_button" class="btn btn-large form-btn"> Reset Password</button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12 slice">
                                        <div class="col-md-12 col-sm-12 col-xs-12 no-padding">
                                            <h4 class="sm-heading" style="text-align: right;">
                                                <a href="#" style="color: #606060;"><span class="signup_link" onclick="open_customer_signin_form();">Log In</span></a>
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="col-md-12 col-sm-12 col-xs-12 slice pc_form_changer">
                                <div class="col-md-12 col-sm-12 col-xs-12 change_form">
                                    <span style="color: #606060">Are you vendor?</span>
                                    <button class="btn btn-sm business_signin_btn" onclick="open_vendor_signin_form();" style="height: 40px;">Business Login</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-0 auth_form_img no-padding">
                            <div class="col-md-12 form-image no-padding"> </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
