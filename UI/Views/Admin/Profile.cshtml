@model UI.ViewModels.UpdateProfileViewModel

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



@Html.Partial("_CoverSection")

<section id="couple-dashboard" class="couple-dashboard-main-block">
    <div class="container-fluid">
        <ul class="couple-dashboard-tabs general-nav-tabs tabs" id="navigation-btnlist">
            <li><a href="@Url.Action("Index","Admin")" class="btn btn-default" id="Dashboard"><span class="badge">Home</span></a></li>
            <li><a href="@Url.Action("Profile","Admin")" class="btn btn-default" id="Profile"><span class="badge">Profile</span></a></li>
        </ul>
            <div class="couple-dashboard-block body_section">
                <h3 class="couple-dashboard-heading dashboard-heading">My Profile </h3>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no_padding">
                        @if (Model.SuccessMessage != null) {
                            <div class="alert alert-success">@Model.SuccessMessage</div>
                        }
                        @if (Model.ErrorMessage != null) {
                            <div class="alert alert-danger">@Model.ErrorMessage</div>
                        }
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no_padding">
                        <div class="col-md-6 card-main no_padding" style="padding: 0;">

                            <div class="col-md-12 col-sm-12 col-xs-12  card-main">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row" style="margin: 0;">
                                            @using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post)) {
                                                <div class="col-md-12 card-title">
                                                    <h5 class="card-title-heading">PERSONAL INFORMATION</h5>
                                                </div>
                                                <div class="col-md-12 col-sm-12 col-xs-12  card-content">
                                                    <div id="update-status"></div>
                                                    <div class="form-group ">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                                                <div class="row">
                                                                    <label for="" class="col-sm-4 control-label">Full Name</label>
                                                                    <div class="col-sm-8">
                                                                        @Html.TextBoxFor(x => x.User.Name, new { @class = "form-control" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group ">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                                                <div class="row">
                                                                    <label for="" class="col-sm-4 control-label">Email</label>
                                                                    <div class="col-sm-8">
                                                                        <div>
                                                                            @Html.TextBoxFor(x => x.User.Email, new { @class = "form-control" })
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group ">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                                                <div class="row">
                                                                    <label for="" class="col-sm-4 control-label">Phone</label>
                                                                    <div class="col-sm-8">
                                                                        @Html.TextBoxFor(x => x.User.Phone, new { @class = "form-control" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 col-sm-12 col-xs-12  card-footer">
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                                                <input type="submit" class=" btn btn-pink submit-btn " id="update_business_info" placeholder="Update" value="Save">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12  card-main no_padding" style="padding: 0;">
                            <div class="col-md-12 col-sm-12 col-xs-12  card-main">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row" style="margin: 0;">
                                            @using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post)) {
                                                @Html.HiddenFor(x => x.User)
                                                <div class="col-md-12 col-sm-12 col-xs-12  card-title">
                                                    <h5 class="card-title-heading">CHANGE PASSWORD</h5>
                                                </div>
                                                <div class="col-md-12 col-sm-12 col-xs-12  card-content">
                                                    <div id="update-status"></div>
                                                    <div class="form-group ">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                                                <div class="row">
                                                                    <label for="" class="col-sm-4 control-label">Old Passowrd</label>
                                                                    <div class="col-sm-8">
                                                                        @Html.TextBoxFor(x => x.OldPassword, new { @placeholder = "Old Password", @class = "form-control", @required = "true", @type = "password" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group ">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                                                <div class="row">
                                                                    <label for="" class="col-sm-4 control-label">New Passowrd</label>
                                                                    <div class="col-sm-8">
                                                                        @Html.TextBoxFor(x => x.NewPasswornd, new { @placeholder = "New Password", @class = "form-control", @required = "true", @type = "password" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group ">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                                                <div class="row">
                                                                    <label for="" class="col-sm-4 control-label">Confirm New Passowrd</label>
                                                                    <div class="col-sm-8">
                                                                        @Html.TextBoxFor(x => x.ConfirmNewPassword, new { @placeholder = "Confirm New password", @class = "form-control", @required = "true", @type = "password" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="col-md-12 col-sm-12 col-xs-12  card-footer">
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                                                <input type="submit" class=" btn btn-pink submit-btn required" id="update_presonal_info" placeholder="Update" value="Save">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
