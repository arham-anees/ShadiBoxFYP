@model UI.ViewModels.ServiceProviderResponsesViewModel

@{
    ViewBag.Title = "Responses";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}




@Html.Partial("_CoverSection")
<section id="couple-dashboard" class="couple-dashboard-main-block">
    <div class="container-fluid">
        @Html.Partial("_NavigationButtonList")
        <div class="couple-dashboard-block body_section">


            <section id="category-listing" class="section_for_page category-listing-main-block  web-section upload-photos" style="padding-top: 0;">

                <h3 class="couple-dashboard-heading dashboard-heading">Responses You Sent</h3>

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 notifications padding_0">
                        <div class="budget-category-full-table">
                            <div class="panel-group faq-panel" id="accordion1" role="tablist" aria-multiselectable="false">
                                <table>
                                    <tbody>
                                        @if (Model.BookingResponses.Count > 0) {
                                            foreach (var item in Model.BookingResponses) {
                                                <tr>
                                                    <td>
                                                        <div class="panel panel-default">
                                                            <div class="panel-heading" onclick="Collapse(@item.Id)">
                                                                <h4 class="panel-title to-do-list-heading">
                                                                    <a class="collapsed" role="button">
                                                                        @item.BookingRequest.ServiceProvider.Name &nbsp;|&nbsp; 
                                                                        @item.BookingRequest.ServiceProvider.ServiceCategory.Name &nbsp;|&nbsp; 
                                                                        @if(item.IsAccepted){<span>Accepted</span>}else{<span>Rejected</span>}
                                                                    </a>

                                                                </h4>
                                                            </div>
                                                            <div id="@item.Id" class="panel-collapse collapse">
                                                                <div class="panel-body budget-category-table-block">
                                                                    <table>
                                                                        <tbody class="inquiry-info">

                                                                        <tr class="data-table-heading">
                                                                            <th>Customer</th>
                                                                            <td>
                                                                                <a>
                                                                                    @item.BookingRequest.User.Name
                                                                                </a>
                                                                            </td>
                                                                            <th>Customer Username</th>
                                                                            <td>@item.BookingRequest.User.Username</td>
                                                                        </tr>
                                                                        <tr class="data-table-heading">
                                                                            <th>Email</th>
                                                                            <td>@item.BookingRequest.User.Email</td>
                                                                            <th>Phone</th>
                                                                            <td>@item.BookingRequest.User.Phone</td>
                                                                        </tr>
                                                                            <tr class="data-table-heading">
                                                                                <th>Function Date</th>
                                                                                <td>@item.BookingRequest.BookingDate.ToLongDateString()</td>
                                                                                <th>Function Time</th>
                                                                                <td>@item.BookingRequest.FunctionTime.Name</td>
                                                                            </tr>
                                                                            <tr class="data-table-heading">
                                                                                <th>Guests</th>
                                                                                <td>@item.BookingRequest.NumberOfGuests</td>
                                                                                <th>Request Date</th>
                                                                                <td>@item.Date.ToLongDateString()</td>
                                                                            </tr>
                                                                            <tr class="data-table-heading">
                                                                                <th>Message</th>
                                                                                <td colspan="3">
                                                                                    @item.BookingRequest.Message
                                                                                </td>
                                                                            </tr>
                                                                            <tr class="data-table-heading">
                                                                                <th colspan="4" style="color: black;font-size: 18px">Response</th>
                                                                            </tr>
                                                                            <tr class="data-table-heading">
                                                                                <th>Response Date</th>
                                                                                <td>
                                                                                    <p> @item.Date.ToLongDateString()</p>
                                                                                </td>
                                                                                <th>Status</th>
                                                                                <td>
                                                                                    @if (item.IsAccepted) {<span>Accepted</span>}
                                                                                    else {<span>Rejected</span>}
                                                                                </td>
                                                                            </tr>
                                                                            <tr class="data-table-heading">
                                                                                <th>Message</th>
                                                                                <td colspan="3">
                                                                                    @item.Message
                                                                                </td>
                                                                            </tr>
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else {
                                            <div class="row">
                                                <div class="col-lg-12 col-sm-12 col-xs-12 " style="padding-top: 50px;">
                                                    <h3 style="text-align: center;">Sorry! There is no record found. </h3>
                                                    <img src="~/Content/assets/web/images/no.jpeg" class="no-data-img" style="margin-left: 35%;">
                                                </div>
                                            </div>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>
